<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.splash_activity.SplashActivity">

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="64dip">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_app_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dip"
            android:fontFamily="@font/lato_bold"
            android:text="इंटेलहेल्थ डी२पी"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="46sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dip"
            android:fontFamily="@font/lato_bold"
            android:text="Intelehealth D2P"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="@string/splash_subtitle"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomLogo"
        android:layout_width="match_parent"
        android:layout_height="128dip"
        android:layout_above="@id/powered_text"
        android:gravity="bottom"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sponsor_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="4dip"
            android:layout_weight="1"
            android:padding="20dip"
            android:src="@drawable/sponsor_logo_four" />

        <!--        <ImageView-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:visibility="gone"-->
        <!--            android:id="@+id/sponsor_two"-->
        <!--            android:src="@drawable/sponsor_logo_three" />-->

        <ImageView
            android:id="@+id/sponsor_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_weight="1"
            android:padding="16dip"
            android:src="@drawable/sponsor_logo_two" />

        <ImageView
            android:id="@+id/sponsor_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_weight="1"
            android:padding="16dip"
            android:src="@drawable/sponsor_logo_one" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/powered_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:padding="8dip"
            android:text="Powered by Intelehealth"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottomLogo"
        android:layout_below="@+id/ll_center"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/round_corner_primary_light"
            android:padding="32dip">

            <TextView
                android:id="@+id/partnership_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/lato_regular"
                android:padding="8dip"
                android:text="@string/in_partnership_with_state_government_of"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <LinearLayout
                android:id="@+id/llStateLogos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/partnership_label_tv"
                android:layout_centerHorizontal="true"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_jh_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dip"
                        android:text="@string/jharkhand"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dip"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_mp_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dip"
                        android:text="@string/madhya_pradesh"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
