<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.AppCompat.Title</item>
    </style>


    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#373737</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="CameraActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="colorControlNormal">@color/font_black_0</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!--        <item name="android:windowBackground">@drawable/background_splash</item>-->
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#5677FC</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="submit">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <!--Style changes related to the New Figma by venu N-->

    <style name="sign_up_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="please_fill">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#828282</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="sign_up_input">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="login_details_conditions">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#828282</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="sign_up_gender">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#373737</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="sign_up_save">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_medium</item>
    </style>

    <style name="home_no_visit">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="number_picker">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="fontFamily">@font/lato_medium</item>
    </style>
</resources>
