<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingBottom="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/txt_sub_header_color"
        android:text="@string/ppe_req"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/lato_bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edt_city_village"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/identification_screen_prompt_city"
            android:imeOptions="actionUnspecified"
            android:inputType="textCapWords"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edt_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_line_1"
            android:imeOptions="actionUnspecified"
            android:inputType="textCapWords"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edt_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_line_2"
            android:imeOptions="actionUnspecified"
            android:inputType="textCapWords"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edt_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/identification_screen_prompt_postal_code"
            android:imeOptions="actionUnspecified"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edt_ppe_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/action_settings"
            android:ems="10"
            android:freezesText="true"
            android:hint="@string/ppe_req_hint"
            android:imeOptions="actionUnspecified"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>
    </com.google.android.material.textfield.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        >
        <Button
            android:id="@+id/btn_positive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:text="@string/submit_ppe_alert"
            android:textColor="@color/txt_sub_header_color"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold"/>

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="@string/cancel"
            android:layout_toStartOf="@+id/btn_positive"
            android:textColor="@color/txt_sub_header_color"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/lato_bold"/>
    </RelativeLayout>

</LinearLayout>