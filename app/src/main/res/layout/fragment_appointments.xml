<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.appointments.AppointmentsActivity">

    <TextView
        android:id="@+id/your_data_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/lato_bold"
        android:padding="10sp"
        android:paddingStart="15sp"
        android:visibility="gone"
        android:text="@string/your_health_record"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_no_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_data_overview"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:padding="10sp"
        android:text="@string/no_visits"
        android:textAppearance="@style/home_no_visit"
        android:textColor="@null" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_data_overview" />
</RelativeLayout>