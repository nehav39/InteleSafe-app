<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    tools:context=".activities.loginActivity.LoginActivity">


            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher_splash_login" />

            <LinearLayout
                android:id="@+id/ll_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18sp"
                        android:gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/forgot_title"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_avatar" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etUsernameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/font_black_5"
                            app:passwordToggleTint="@color/white"
                            android:theme="@style/MyEditTextTheme">

                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/email_id"
                                android:textColorHint="@color/font_black_5"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:fontFamily="@font/lato_regular"
                                android:theme="@style/MyEditTextTheme"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:gravity="center"
            android:fontFamily="@font/lato_bold"
            android:text="@string/verification_code"/>

        <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

                        <EditText
                            android:id="@+id/otp_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="1"
                            android:layout_margin="15dp"
                            android:gravity="center"
                            android:textCursorDrawable="@drawable/black_cursor"
                            android:background="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:theme="@style/MyEditTextTheme"
                            android:textSize="16sp" />
            <EditText
                android:id="@+id/otp_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@color/white"
                android:textCursorDrawable="@drawable/black_cursor"
                android:fontFamily="@font/lato_regular"
                android:theme="@style/MyEditTextTheme"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/otp_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="1"
                android:gravity="center"
                android:textCursorDrawable="@drawable/black_cursor"
                android:background="@color/white"
                android:layout_margin="15dp"
                android:fontFamily="@font/lato_regular"
                android:theme="@style/MyEditTextTheme"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/otp_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="1"
                android:gravity="center"
                android:textCursorDrawable="@drawable/black_cursor"
                android:background="@color/white"
                android:layout_margin="15dp"
                android:fontFamily="@font/lato_regular"
                android:theme="@style/MyEditTextTheme"
                android:textSize="16sp" />

                 </LinearLayout>
    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/layout3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18sp"
                        android:gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/new_password"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_lock" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etPasswordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/font_black_5"
                        app:passwordToggleTint="@color/white"
                        android:theme="@style/MyEditTextTheme"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_password"
                            android:textColorHint="@color/font_black_5"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_lock" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etConfirmPasswordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/font_black_5"
                        app:passwordToggleTint="@color/white"
                        android:theme="@style/MyEditTextTheme"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/et_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/confirm_password"
                            android:textColorHint="@color/font_black_5"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:text="@string/submit_visitSummary_Button"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/text_18sp"
                    />




            </LinearLayout>

</RelativeLayout>
