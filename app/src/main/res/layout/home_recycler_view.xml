<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_recycler_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dip"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        app:cardBackgroundColor="@color/orange2"
        app:cardCornerRadius="16dip"
        app:cardElevation="8dip">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dip"
            app:cardBackgroundColor="@color/red_light_1"
            app:cardCornerRadius="16dip"
            app:cardElevation="8dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dip">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_label_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_vertical"
                        android:paddingStart="8dip"
                        android:paddingTop="4dip"
                        android:paddingEnd="8dip"
                        android:paddingBottom="4dip"
                        android:text="@string/self_assessment_label"
                        android:textColor="@color/gray_6"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="24dip"
                        android:layout_alignTop="@+id/title_label_1_tv"
                        android:layout_alignBottom="@+id/title_label_1_tv"
                        android:layout_toEndOf="@+id/title_label_1_tv"
                        android:background="@color/gray_3" />

                    <TextView
                        android:id="@+id/title_label_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@+id/title_label_1_tv"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="8dip"
                        android:paddingTop="4dip"
                        android:paddingEnd="8dip"
                        android:paddingBottom="4dip"
                        android:text="12/06/2021"
                        android:textColor="@color/gray_4"
                        android:textSize="16sp" />

                    <WebView
                        android:id="@+id/note_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_label_1_tv"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:padding="8sp"
                        android:paddingVertical="15sp"
                        android:textColor="@color/gray_6"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/recycler_day_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_vertical"
                        android:paddingVertical="15sp"
                        android:paddingStart="15sp"
                        android:text="Day 1"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/recycler_date_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:visibility="gone"
                        tools:text="2020-06-08" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/prescription_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip">

                    <TextView
                        android:id="@+id/prescription_status_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:padding="8sp"
                        android:paddingVertical="15sp"
                        android:text="@string/waiting_for_doctor_s_prescription"
                        android:textColor="@color/gray_6"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/recycler_tick_imageview"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_margin="8dip"
                        tools:src="@drawable/prescription_new_icon" />
                </RelativeLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</LinearLayout>